{
    "hostname": "gus",
    "log_level": "DEBUG",
    "db_name": "gus",
    "snifferbuddy_table_name": "SnifferBuddy_Readings",
    "snifferbuddy_mqtt": {"snifferbuddy/reading": "on_snifferbuddy_readings",
                          "snifferbuddy/lwt": "on_snifferbuddy_status"},
    "debug_mqtt": {"log/debug_msg":"on_debug_msg"},
    "rolling_window_size": 3,



    "MistBuddy_PID_key": {
        "setpoint": 1.0,
        "Kp": 180,
        "Ki": 0,
        "Kd": 0,
        "output_limits": [0, 10],
        "integral_limits":[0, 4],
        "maximum": 1.0,
        "tune": {"increment": 2, "influxdb_table_name": "mistbuddy_tune"},
        "comparison_function": "less_than",
        "update_interval": 20,
        "mqtt": ["cmnd/mistbuddy_fan/POWER","cmnd/mistbuddy_mister/POWER"]
    },

    "StomaBuddy_PID_key": {
        "setpoint": 1000,
        "Kp": 0.04,
        "Ki":0.00008,
        "Kd":0.00005,
        "output_limits": [0, 30],
        "integral_limits":[0, 2],
        "tune": {"increment": 0, "influxdb_table_name": ""},
        "comparison_function": "greater_than",
        "update_interval": 20,
        "mqtt": ["cmnd/stomabuddy/POWER"]
    }
}